<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCCCC"
        android:gravity="center"
        android:padding="20dp"
        android:text="我来组成头部"
        android:textSize="20sp"
        app:layout_behavior="com.example.yangjie.mydemo.widge.HeadTitleBehavior" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/head_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.example.yangjie.mydemo.widge.HeadRecyBehavior"></android.support.v7.widget.RecyclerView>

</android.support.design.widget.CoordinatorLayout>